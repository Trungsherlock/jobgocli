{
    "manifest_version": 3,
    "name": "JobGo",
    "version": "0.1.0",
    "description": "Track job listings and H1B sponsors from your brower",
    "permissions": [
        "sidePanel",
        "storage",
        "alarms",
        "notifications"
    ],
    "host_permissions": [
        "http://localhost:8080/*",
        "*://*.greenhouse.io/*",
        "*://*.lever.co/*",
        "*://*.ashbyhq.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "side_panel": {
        "default_path": "sidepanel/index.html"
    },
    "action": {
        "default_title": "Open JobGo",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon16.png",
            "128": "icons/icon16.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon16.png",
        "128": "icons/icon16.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.greenhouse.io/*",
                "*://*.lever.co/*",
                "*://*.ashbyhq.com/*"
            ],
            "js": ["content.js"],
            "run_at": "document_idle"
        }
    ]
}